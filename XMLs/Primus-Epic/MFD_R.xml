<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>
    
    <path>../../Models/Primus-Epic/primus_epic_mfd1.ac</path>
    
    <!-- Power on/off -->
    <animation>
        <name>Power on/off</name>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/efis</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>
    
    <animation>
        <type>touch</type>
        <object-name>MFD1</object-name>
        <action>
            <touch>0</touch>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.touch(cmdarg().getValues());
                    }
                ]]></script>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>knob</type>
        <object-name>MFD1_frame</object-name>
        <decrease>
            <binding>
                <command>property-cycle</command>
                <property>/instrumentation/mfd[1]/lateral-range</property>
                <value type="double">2.5</value>
                <value type="double">5</value>
                <value type="double">10</value>
                <value type="double">25</value>
                <value type="double">50</value>
                <value type="double">100</value>
                <value type="double">250</value>
                <value type="double">500</value>
                <value type="double">1000</value>
                <wrap type="bool">false</wrap>
            </binding>
        </decrease>
        <increase>
            <binding>
                <command>property-cycle</command>
                <property>/instrumentation/mfd[1]/lateral-range</property>
                <value type="double">1000</value>
                <value type="double">500</value>
                <value type="double">250</value>
                <value type="double">100</value>
                <value type="double">50</value>
                <value type="double">25</value>
                <value type="double">10</value>
                <value type="double">5</value>
                <value type="double">2.5</value>
                <wrap type="bool">false</wrap>
            </binding>
        </increase>
        <shift-decrease>
        </shift-decrease>
        <shift-increase>
        </shift-increase>
    </animation>
    
</PropertyList>
