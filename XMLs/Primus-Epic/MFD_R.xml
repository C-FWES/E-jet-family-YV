<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>
    
    <path>../../Models/Primus-Epic/primus_epic_mfd1.ac</path>
    
    <!-- Power on/off -->
    <animation>
        <name>Power on/off</name>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/efis</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>
    
