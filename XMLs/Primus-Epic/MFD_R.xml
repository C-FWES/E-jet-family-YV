    <animation>
        <type>pick</type>
        <object-name>MFD1</object-name>
        <action>
            <button>4</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-cycle</command>
                <property>/instrumentation/mfd[1]/lateral-range</property>
                <value type="double">1</value>
                <value type="double">5</value>
                <value type="double">10</value>
                <value type="double">20</value>
                <value type="double">50</value>
                <value type="double">100</value>
                <value type="double">200</value>
            </binding>
        </action>
        <action>
            <button>3</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-cycle</command>
                <property>/instrumentation/mfd[1]/lateral-range</property>
                <value type="double">200</value>
                <value type="double">100</value>
                <value type="double">50</value>
                <value type="double">20</value>
                <value type="double">10</value>
                <value type="double">5</value>
                <value type="double">1</value>
            </binding>
        </action>
    </animation>
    
